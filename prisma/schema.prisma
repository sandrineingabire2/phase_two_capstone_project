datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  bio          String?
  avatarUrl    String?
  posts        Post[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum PostStatus {
  draft
  published
}

model Post {
  id         String     @id @default(cuid())
  slug       String     @unique
  title      String
  excerpt    String?
  content    String
  coverImage String?
  status     PostStatus @default(draft)
  deletedAt  DateTime?
  author     User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}
